@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected amount</th>
            <th>Car</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-left">
                    <a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-carId="@item.Car.CarId" alt="">Decrease amount</a>
                </td>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Car.Name</td>
                <td class="text-right">@item.Car.Price.ToString("c")</td>
                <td class="text-right">@((item.Car.Price * item.Amount).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-rigtht">Total</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table>